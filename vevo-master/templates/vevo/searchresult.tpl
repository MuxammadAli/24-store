[searchcomments]
[fullresult]
<div class="bcomment">
    <div class="avatar"><img src="{foto}">
        <div class="user-status">
            [online]<img src="{THEME}/images/online.png" title="Пользователь в сети">[/online]
            [offline]<img src="{THEME}/images/offline.png" title="Пользователь не в сети">[/offline]
        </div>           
    </div>
    <div class="bcomm">
        [not-group=5]
        <div class="comedit">
            [fast]<img src="{THEME}/images/reply-btn.png" title="Ответить">[/fast]
            [complaint]<img src="{THEME}/images/complaint-btn.png" title="Пожаловаться">[/complaint]
            [com-edit]<img src="{THEME}/images/edit-btn.png" title="Изменить">[/com-edit]
            [com-del]<img src="{THEME}/images/del-btn.png" title="Удалить">[/com-del]
        </div>
		[/not-group]
        <div class="commm-user">
            <span class="author">{author}</span> [aviable=lastcomments]- {news_title}[/aviable]<br />
            Группа: {group-name}<br />
            {date}
        </div>
        <div class="comm-text">
            {comment}
        </div>
    </div>
</div>
[/fullresult]
