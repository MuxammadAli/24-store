<div class="news_block" id="bx_1">
    <div class="news-header">
		<h1 class="news-name">
            <a href="{full-link}">
               {title}
            </a>
        </h1>
        <span class="published">Опубликовал:&nbsp;({author}) </span>
    </div>
    <div class="news-content">
        <a href="{full-link}"><img class="" border="0" src="[xfvalue_image1]" width="850" height="420" alt="{title}" title="{title}" style="float:left"></a>
        <span class="news-preview-text"></span>
        <div class="block_fix"></div>
    </div>
    <div class="news_footer">
        <a class="chitat-dalee" href="{full-link}"style="margin: 4px;">ПОДРОБНЕЕ</a>
        <a class="chitat-dalee" href="/"style="margin: 4px;">ВСЕ НОВОСТИ</a>
        <span class="other-info">Просмотры:&nbsp;{views}</span>
        <span class="other-info">Комментарии:&nbsp;{comments-num}</span>
    </div>
</div>